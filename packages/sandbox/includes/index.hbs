<!DOCTYPE html>
<html lang="en">

<head>
  <title>{{siteTitle}}</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="robots" content="noindex, nofollow" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
  <link rel="alternate" type="application/rss+xml" title="{{siteTitle}}" href="{{feedHref}}" />
  <link rel="stylesheet" href="index.css" />
  <link rel="stylesheet" href="lite-yt-embed.css" />
</head>

<body>
  <ul class="channel-list-layout">
  {{#each sources}}
    <li>
      <section class="channel-layout js-horizontal-scroll">
        <h2>
          <a href="{{siteUrl}}">{{title}}</a>
        </h2>
        <button class="channel-layout__scroll-left js-horizontal-scroll__backward">&lt;</button>
        <ul class="channel-layout__video-list video-list-layout js-horizontal-scroll__list">
          {{#each articles}}
          <li class="video js-horizontal-scroll__item">
            <lite-youtube watchUrl="{{link}}"></lite-youtube>
            <a href={{link}}>{{title}}</a>
            <div>{{isoPublishDate}}</div>
          </li>
          {{/each}}
        </ul>
        <button class="channel-layout__scroll-right js-horizontal-scroll__forward">&gt;</button>
      </section>
    </li>

  {{/each}}
  </ul>

  <script src="lite-yt-embed.js"></script>
  <script src="horizontal-scroll.js"></script>
</body>

</html>